<nav id="navbar-container">
    <div>
        <button id="navbar-toggle" type="button" data-toggle="collapse">
            <img id="navbar-toggle-icon" src="/assets/hamburger.svg" width="30px" height="30px" />
        </button>
        <div id="navbar-collapse" class="hidden">
            <ul id="navbar">
                <li>
                    <img src="/assets/store.svg" alt="store icon" width="30px" height="30px" />
                    <a href="/">Store</a>
                </li>
                @if(User.IsInRole("admin"))
                {
                <li>
                    <img src="/assets/admin.svg" alt="admin icon" width="30px" height="30px" />
                    <a href="/admin">Admin</a>
                </li>
                }
                <li>
                    <img src="/assets/cart.svg" alt="cart icon" width="30px" height="30px" />
                    <a href="/cart">Cart</a>
                </li>
                @if(User.Identity.IsAuthenticated)
                {
                <div>
                    <li>
                        <img src="/assets/user.svg" alt="user icon" width="30px" height="30px" />
                        <a>@User.Identity.Name</a>
                    </li>
                    <li>
                        <img src="/assets/logout.svg" alt="logout icon" width="30px" height="30px" />
                        <a href="/auth/logout">Logout</a>
                    </li>
                </div>

                } else {
                <div>
                    <li>
                        <img src="/assets/login.svg" alt="login icon" width="30px" height="30px" />
                        <a href="/auth/login">Login</a>
                    </li>
                    <li>
                        <img src="/assets/register.svg" alt="register icon" width="30px" height="30px" />
                        <a href="/auth/register">Register</a>
                    </li>
                </div>
                }
            </ul>
        </div>
    </div>
</nav>
